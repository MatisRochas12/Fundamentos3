#include <iostream>
using namespace std;

int main () 
{
	int opcion, cantidad;
	double suma = 0, ingreso, precio;
	do {
		cout << "Menu" << endl;
		cout << "Hamburguesa (3bs)" << endl;
		cout << "Hamburguesa con queso (5Bs)" << endl;
		cout << "Papa Fritas (2Bs)" << endl;
		cout << "Soda (2.5)" << endl;
		cout << "0. salir" << endl;
		cout << "Ingrese una opcion" << endl;
		cin >> opcion;
		precio = 0;
		switch (opcion) 
		{
			case 1: precio = 3;
				break;
			case 2: precio = 5;
				break;
			case 3: precio = 2;
				break;
			case 4: precio = 2.5;
				break;
			case 0:cout << "Salir" << endl;
				break;
			default :					// es lo mismo de otro
				cout << "Error" << endl;
		}
		if (precio > 0) {
			cout << "Ingrese la cantidad: ";
			cin >> cantidad;
			ingreso = cantidad * precio;
			suma = suma + ingreso;
		}
	} while (opcion != 0);
	cout << " el monto total a pagar es: " << suma;
	return 0;
}
