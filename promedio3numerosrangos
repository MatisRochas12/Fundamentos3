#include <iostream>
using namespace std;

int main()
{
    int a, b, c;
    cout << "Ingresar el primer numero ";
    cin >> a;
    cout << "Ingrese el segundo numero ";
    cin >> b;
    cout << "Ingrese el tercer numero ";
    cin >> c;
    if ((a <= 10 && a >= 0) && (b <= 10 && b >= 0) && (c <= 10 && c >= 0))
    { 
        cout << "El promedio es= " << ((a + b + c) / 3);
    }
    else
    {
        if (a > 10 || a < 0)
        { 
            cout << "Error primer numero Fuera de rango"<< endl;
        }
        if (b > 10 || b < 0)
        {
            cout << "Error segundo numero Fuera de rango"<<endl;
        }
        if (c > 10 || c < 0)
        {
            cout << "Error tercer numero numero Fuera de rango" << endl;
        }
    }
        return 0;
}
