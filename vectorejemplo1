#include <iostream>
#define MAX 100
using namespace std;  // Necesario para usar cout y cin sin std::

/* Prototipos de funciones */
void cargar(int vector[], int n);  // Lee los datos de un arreglo
void mostrar(int vector[], int n); // Visualiza el contenido del vector
float promedio(int vector[], int n);
int main()
{
    int tamano, vec[MAX];

    // Pedir el tamano del vector con validación
    do {
        cout << "Ingrese el tamaño del vector: ";
        cin >> tamano;
    } while ((tamano <= 0) || (tamano > MAX));

    // Llamar a las funciones
    cargar(vec, tamano);
    mostrar(vec, tamano);
    cout << "El promedio es: " << promedio(vec, tamano);
    return 0;
}

/* Declaración de las funciones */

// Cargar datos en el vector
void cargar(int vector[], int n) {
    for (int i = 0; i < n; i++) {
        cout << "vector[" << i << "] = ";
        cin >> vector[i];
    }
}

// Mostrar los datos del vector
void mostrar(int vector[], int n) {
    cout << "\nContenido del vector:\n";
    for (int i = 0; i < n; i++) {
        cout << "vector[" << i << "] = " << vector[i] << endl;
    }
}
float promedio(int vector[], int n) {
    float suma = 0;
    for (int i = 0; i < n; i++) {
        suma = suma + vector[i];
        return suma / n;
    }
}
