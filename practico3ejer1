#include <iostream>
using namespace std;

int main()
{
    int N, digito, suma = 0;
    do {
        cout << "Ingrese el valor: ";
        cin >> N;
    } while (N <= 0);

    while (N > 0) {
        digito = N % 10; 
        N = N / 10; 
        suma = suma + digito; 
    }

    cout << "La suma de los digitos es: " << suma; 
    return 0;
}
