// ejerciciecuacioncuadraticas.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
// Ejercicio Ecuacion Cuadratica

#include <iostream>
#include "Math.h"

using namespace std;

int main()
{
    //Declaracion de variable
    float a, b, c, x1, x2, d;
    cout << "calculo de las raices de una cuadrattica: ";
    cout << endl << "Coficiente a= ";
    cin >> a;
    if (a != 0) {
        cout << "Ingresar b";
        cin >> b;
        cout << "ingresar c";
        cin >> c;
        d = -b * b - 4 * a * c;
        if (d > 0) {
            x1 = (-b + sqrt(d)) / (2 * a);
            x2 = (-b - sqrt(d)) / (2 * a);
            cout << "raices reales : x1 = " << x1 << " x2 = " << x2 << endl;
        }
        else
            if (d == 0)
                cout << "Raiz unica" << -b / (2 * a);
            else
            {
                cout << "Raiz imaginaria x1" << -b / (2 * a) << " + " << sqrt(-d) / (2 * a) << "i";
                cout << "raiz imaginaria x2" << -b / (2 * a) << " - " << sqrt(-d) / (2 * a) << "i";
            }
    }
    else
        cout << "Error";
    return 0;
}

